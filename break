// 숫자 1부터 계속 더해 나가서 몇까지 더하면 합이 100을 넘는지 구하


public class nuli {

	public static void main(String[] args) {
		int sum = 0;
		int i = 0;
		
		while(true) {
			if(sum > 100) 
				break;
			++i;
			sum += i;
			
			System.out.printf("%d %d%n",i, sum);
			
		}
		System.out.println("i= "+i);
		System.out.println("sum= "+sum);
	
	}

}
